<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/crm_company_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="旺旺营养食品有限公司" 
            android:textColor="@color/black"
            android:textSize="15dp"
            />
        
         <TextView
            android:id="@+id/crm_relation_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="联系人" 
            android:textColor="@color/font1"
            android:textSize="13sp"
            />
    </RelativeLayout>
    
    <TextView 
        android:id="@+id/crm_user_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="地址：武汉市东湖高新技术开发区武大科技园"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="13sp"
        />
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <TextView 
            android:id="@+id/crm_user_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="类型：工厂"
            android:layout_weight="4"
            android:textColor="@color/black"
            android:textSize="13sp"
            />
        
           <TextView 
            android:id="@+id/crm_user_rank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="客户级别：大客户"
            android:layout_weight="6"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:textSize="13sp"
            />
        
    </LinearLayout>
    
        <TextView 
        android:id="@+id/crm_user_telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="单位电话：027-35353535"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="13sp"
        />

</LinearLayout>